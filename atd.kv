#:import MDDropdownMenu kivymd.uix.menu.MDDropdownMenu
<Email>:
    MDGridLayout
        cols: 1
        padding: (10,10)
        MDLabel:
            text: 'Choose Data:'
            halign: 'center'
            font_style: 'H6'
        MDGridLayout:
            cols: 4
            MDCheckbox:
                id: daily
            MDLabel:
                text: 'Daily'
                halign:'left'
            MDCheckbox:
                id: monthly
            MDLabel:
                text: 'Monthly'
                halign:'left'
        MDGridLayout:
            cols: 2
            padding: (10,10)
            spacing: dp(10)
            size_hint: 1,0.5
            MDRaisedButton:
                text: 'Back'
                size_hint: 1, 1
                on_press: root.ch_p_home()
            MDRaisedButton:
                text: 'Send E-mail'
                size_hint: 1, 1
                on_press: root.s_email()


<AddEmployee>:
    MDGridLayout:
        cols: 1
        padding: (10,10)
        spacing: dp(10)
        Image:
            id : facePreview
            source: 'logo.jpeg'
            allow_stretch: True
        MDLabel:
            id: forhead_pos
            text: ''
        MDSeparator:
        MDGridLayout:
            cols: 1
            padding: (100,10)
            MDTextField:
                id: name
                required: True
                hint_text: 'Name'
                helper_text_mode: 'persistent'
            MDTextField:
                id: post
                required: True
                hint_text: 'Post'
                helper_text_mode: 'persistent'
            MDTextField:
                id: ID
                required: True
                hint_text: 'ID'
                helper_text_mode: 'persistent'
        MDSeparator:
        BoxLayout:
            # cols:2
            spacing: dp(10)
            size_hint_y: 0.2
            padding: dp(5)
            MDRaisedButton:
                id: btn_home
                text: 'close'
                halign: 'center'
                size_hint: 1, 1
                on_press: root.ch_p_home()
            MDRaisedButton:
                id: btn_add
                text: 'Add'
                halign: 'center'
                size_hint: 1, 1
                on_press:root.add()
