
<Email>:
    cols: 1
    padding: (10,10)
    GridLayout:
        cols: 2
        Label:
            text: 'Choose Data:'
            text_size: (self.width, None)
            halign: 'center'
        GridLayout:
            cols: 1
            CheckBox:
                id: daily
            CheckBox:
                id: monthly
    Button:
        text: 'Send E-mail'
        on_press: root.s_email()
    Button:
        text: 'Back'
        on_press: root.ch_p_home()
            
<AddEmployee>:
    cols: 1
    padding: (10,10)
    spacing: dp(10)
    Image:
        id : facePreview
        source: 'logo.jpeg'
        allow_stretch: True
    MDSeparator:
    GridLayout:
        cols: 1
        padding: (100,10)
        MDTextField:
            id: name
            required: True
            hint_text: 'Name'
            helper_text_mode: 'persistent'
        MDTextField:
            id: post
            required: True
            hint_text: 'Post'
            helper_text_mode: 'persistent'
        MDTextField:
            id: ID
            required: True
            hint_text: 'ID'
            helper_text_mode: 'persistent'
    MDSeparator:
    GridLayout:
        cols:2
        spacing: dp(20)
        size_hint_y: 0.2
        MDRaisedButton:
            id: btn_home
            text: 'close'
            size_hint_x:1
            on_press: root.ch_p_home()
        MDRaisedButton:
            id: btn_add
            text: 'Add'
            size_hint_x:1
            on_press:root.add()
<HomePage>:
    cols: 1
    spacing: dp(10)
    MDToolbar:
        id: toolbar
        title: 'Imami'
        md_bg_color: app.theme_cls.primary_color
        elevation: 10
        left_action_items: [["dots-vertical", lambda x: None]]
        pos_hint: {"top": 1}
    MDGridLayout:
        cols: 3
        spacing: dp(20)
        size_hint_y: 0.2
        padding: dp(10)
        MDRaisedButton:
            text: 'Close'
            #text_size: (self.width, None)
            halign: 'center'
            size_hint_x:1
            on_press: root.close_app()
        MDRaisedButton:
            text: 'Email'
            #text_size: (self.width, None)
            halign: 'center'
            size_hint_x:1
            on_press: root.ch_p_email()
        MDRaisedButton:
            text: 'Add Employee'
            #text_size: (self.width, None)
            halign: 'center'
            size_hint_x:1
            on_release: root.ch_p_add()
    MDSeparator:
    MDGridLayout:
        cols: 3
        padding: dp(10)
        spacing: dp(20)
        Image:
            id: FaceCam
            source: ''
            allow_stretch: True
        Image:
            id: QrCam
            source: ''
            allow_stretch: True
    MDSeparator:
    MDGridLayout:
        cols: 2
        padding: dp(10)
        GridLayout:
            cols: 2
            OneLineListItem:
                halign: 'left'
                text: 'Name: '
            
            OneLineListItem:
                id: name
                text: 'Hello'
                halign: 'left'
            OneLineListItem:
                halign: 'left'
                text: 'Post: '
            OneLineListItem:
                id: post
                text: 'Hello'
                halign: 'left'
    MDBottomAppBar:

        MDToolbar:
            id: toolbar
            title: "Title"
            icon: "git"
            type: "bottom"
            left_action_items: [["menu", lambda x: x]]
    
        
